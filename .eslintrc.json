{
  "root": true,
  "env": {
    "node": true,
    "es6": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:security/recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module"
  },
  "ignorePatterns": [
    "node_modules/",
    "public/dashboard-app/build/",
    "public/dashboard-app/node_modules/",
    "cypress/",
    "coverage/",
    "*.min.js",
    "dist/"
  ],
  "rules": {
    "no-console": "warn",
    "no-unused-vars": ["error", { "argsIgnorePattern": "^_" }],
    "semi": ["error", "always"],
    "quotes": ["error", "single", { "allowTemplateLiterals": true }],
    "security/detect-object-injection": "warn",
    "security/detect-possible-timing-attacks": "error",
    "security/detect-eval-with-expression": "error"
  },
  "overrides": [
    {
      "files": ["**/*.test.js", "test/**/*.js"],
      "env": {
        "jest": true,
        "mocha": true
      }
    },
    {
      "files": ["scripts/**/*.js"],
      "rules": {
        "no-console": "off"
      }
    }
  ]
}