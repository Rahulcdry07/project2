{
  "name": "dynamic-web-app",
  "version": "1.0.0",
  "description": "A dynamic web application with Node.js, Express, and SQLite.",
  "main": "src/server.js",
  "scripts": {
    "start": "NODE_ENV=development node src/server.js",
    "start:test": "NODE_ENV=test node src/server.js",
    "start:production": "NODE_ENV=production node src/server.js",
    "start:ci": "NODE_ENV=test node src/server.js",
    "cy:run": "start-server-and-test start:ci http://localhost:3000 \"cypress run\"",
    "cy:run:spec": "start-server-and-test start:ci http://localhost:3000 \"cypress run --spec\"",
    "cy:open": "start-server-and-test start http://localhost:3000 \"cypress open\"",
    "test:backend": "mocha --timeout 10000 test/backend.test.js",
    "test:security": "mocha --timeout 10000 test/security.test.js",
    "test:integration": "mocha --timeout 10000 test/integration.test.js",
    "test:all": "mocha --timeout 10000 test/*.test.js",
    "test:coverage": "nyc mocha --timeout 10000 test/*.test.js",
    "test:run": "node test/run-tests.js",
    "test:react": "jest --testPathPattern=public/dashboard-app/src/components/__tests__ --setupFilesAfterEnv=public/dashboard-app/src/test-setup.js",
    "test:react:watch": "jest --testPathPattern=public/dashboard-app/src/components/__tests__ --setupFilesAfterEnv=public/dashboard-app/src/test-setup.js --watch",
    "test:react:coverage": "jest --testPathPattern=public/dashboard-app/src/components/__tests__ --setupFilesAfterEnv=public/dashboard-app/src/test-setup.js --coverage",
    "test:all:react": "jest --testPathPattern=public/dashboard-app/src --setupFilesAfterEnv=public/dashboard-app/src/test-setup.js",
    "db:init": "node scripts/manage-db.js init",
    "db:init:test": "node scripts/manage-db.js init test",
    "db:init:prod": "node scripts/manage-db.js init production",
    "db:reset": "node scripts/manage-db.js reset",
    "db:reset:test": "node scripts/manage-db.js reset test",
    "db:seed": "node scripts/manage-db.js seed",
    "db:seed:test": "node scripts/manage-db.js seed test",
    "db:status": "node scripts/manage-db.js status",
    "db:list": "node scripts/manage-db.js list",
    "cypress:open": "cypress open",
    "cypress:run": "cypress run"
  },
  "keywords": [],
  "author": "Gemini",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "cypress": "^14.5.1",
    "dotenv": "^17.2.0",
    "dotenv-safe": "^9.1.0",
    "express": "^4.21.2",
    "express-rate-limit": "^8.0.1",
    "express-validator": "^7.2.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.2",
    "nodemailer": "^7.0.5",
    "nodemon": "^3.1.10",
    "sequelize": "^6.37.7",
    "sqlite3": "^5.1.7",
    "start-server-and-test": "^2.0.4",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.28.0",
    "@babel/preset-react": "^7.27.1",
    "@cypress/webpack-preprocessor": "^6.0.4",
    "@testing-library/jest-dom": "^6.1.4",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.5.1",
    "babel-loader": "^9.1.0",
    "chai": "^4.3.4",
    "cypress-plugin-tab": "^1.0.5",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "mocha": "^11.7.1",
    "supertest": "^7.1.3"
  }
}
