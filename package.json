{
  "name": "dynamic-web-app",
  "version": "1.0.0",
  "description": "A dynamic web application with Node.js, Express, and SQLite.",
  "main": "src/app.js",
  "scripts": {
    "start": "nodemon src/server.js",
    "start:ci": "NODE_ENV=test node src/server.js",
    "start:prod": "NODE_ENV=production node src/server.js",
    "playwright:test": "playwright test --config=config/playwright/playwright.config.js",
    "playwright:test:headed": "playwright test --config=config/playwright/playwright.config.js --headed",
    "playwright:test:debug": "playwright test --config=config/playwright/playwright.config.js --debug",
    "playwright:report": "playwright show-report test-results/playwright-report",
    "pw:run": "playwright test --config=config/playwright/playwright.config.js",
    "pw:ui": "playwright test --config=config/playwright/playwright.config.js --ui",
    "pw:smoke": "playwright test --config=config/playwright/playwright.config.js smoke.spec.js --project=chromium",
    "pw:core": "playwright test --config=config/playwright/playwright.config.js smoke.spec.js login.spec.js admin.spec.js dashboard.spec.js api.spec.js --project=chromium",
    "test:backend": "NODE_ENV=test mocha --require test/setup.js test/backend.test.js --timeout 10000",
    "test:models": "NODE_ENV=test mocha --require test/setup.js test/models.test.js --timeout 10000",
    "test:controllers": "NODE_ENV=test mocha --require test/setup.js test/controllers.test.js --timeout 10000",
    "test:middleware": "NODE_ENV=test mocha --require test/setup.js test/middleware.test.js --timeout 10000",
    "test:utils": "NODE_ENV=test mocha --require test/setup.js test/utils.test.js --timeout 10000",
    "test:tenders": "NODE_ENV=test mocha --require test/setup.js test/tenders.test.js --timeout 10000",
    "test:security": "npm audit --audit-level=high",
    "test:security-unit": "NODE_ENV=test mocha --require test/setup.js test/security.test.js --timeout 10000",
    "test:security-config": "bash scripts/test-security.sh",
    "test:unit": "NODE_ENV=test mocha --require test/setup.js test/*.test.js --timeout 10000",
    "test:frontend": "cd public/dashboard-app && npm test -- --run",
    "test:all": "npm run test:unit && npm run test:frontend && npm run test:security",
    "test:quick": "npm run test:unit && npm run test:frontend",
    "test:verify": "npm run test:quick && echo 'âœ… All tests passed! Safe to commit.'",
    "precommit": "npm run test:verify && npm run lint",
    "test:load": "artillery run test/performance/load-test.yml",
    "test:dependencies": "node scripts/dependency-scan.js",
    "generate:types": "node scripts/generate-types.js",
    "validate:ci": "node scripts/validate-ci.js",
    "start:servers": "bash scripts/start-servers.sh",
    "stop:servers": "bash scripts/stop-servers.sh",
    "db:migrate": "sequelize-cli db:migrate",
    "db:migrate:undo": "sequelize-cli db:migrate:undo",
    "db:migrate:undo:all": "sequelize-cli db:migrate:undo:all",
    "db:seed": "sequelize-cli db:seed:all",
    "db:seed:undo:all": "sequelize-cli db:seed:undo:all",
    "db:reset": "npm run db:migrate:undo:all && npm run db:migrate && npm run db:seed",
    "docker:build": "docker build -t dynamic-web-app .",
    "docker:run": "docker run -d -p 3002:3000 --name web-app-container dynamic-web-app",
    "lint": "eslint src --ext .js",
    "lint:fix": "eslint src --ext .js --fix",
    "lint:frontend": "cd public/dashboard-app && npm run lint",
    "lint:frontend:fix": "cd public/dashboard-app && npm run lint:fix",
    "format": "prettier --write \"**/*.{js,jsx,json,md}\"",
    "audit": "npm audit",
    "audit:fix": "npm audit fix",
    "prepare": "husky install",
    "validate": "npm run lint && npm run test:security"
  },
  "keywords": [],
  "author": "Rahul",
  "license": "ISC",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^8.2.1",
    "helmet": "^8.1.0",
    "hpp": "^0.2.3",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "nodemailer": "^7.0.11",
    "prom-client": "^15.1.3",
    "puppeteer": "^24.22.3",
    "sequelize": "^6.35.1",
    "sqlite3": "^5.1.6",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "winston": "^3.11.0",
    "xss-clean": "^0.1.4"
  },
  "devDependencies": {
    "@playwright/test": "^1.49.0",
    "artillery": "^2.0.0",
    "chai": "^4.3.10",
    "eslint": "^8.56.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-security": "^1.7.1",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "mocha": "^10.2.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.1",
    "sequelize-cli": "^6.6.2",
    "sinon": "^21.0.0",
    "supertest": "^6.3.3",
    "wait-on": "^9.0.1"
  }
}
