# Server Configuration
PORT=3000
NODE_ENV=development

# Authentication - CHANGE THESE IN PRODUCTION!
JWT_SECRET=your_jwt_secret_key_here_make_it_very_long_and_secure_at_least_64_characters_long
JWT_REFRESH_SECRET=your_jwt_refresh_secret_key_here_also_very_long_and_secure_different_from_jwt_secret
JWT_EXPIRATION=30m
JWT_REFRESH_EXPIRATION=7d

# Email Configuration
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_USER=user@example.com
EMAIL_PASS=your_email_password
EMAIL_FROM=noreply@example.com

# Database Configuration
# Uncomment for production with PostgreSQL
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=mydatabase
# DB_USER=postgres
# DB_PASS=password

# File Upload Configuration
MAX_FILE_SIZE=10485760
MAX_PROFILE_IMAGE_SIZE=5242880
MAX_FILES_PER_USER=100
UPLOAD_PATH=uploads

# Security Settings
BCRYPT_ROUNDS=12
SESSION_TIMEOUT=1800
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# External Service URLs (for future AI integration)
# EMBEDDING_SERVICE_URL=http://localhost:8000
# OCR_SERVICE_URL=http://localhost:8001

# Client URL (for email links and CORS)
CLIENT_URL=http://localhost:3000

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/app.log